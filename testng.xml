<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Suite">
    <parameter name="URL" value="https://www.saucedemo.com/"></parameter>

    <test name="Test on chrome">
        <parameter name="BrowserType" value="Chrome"></parameter>
        <classes>
            <!-- Login -->
            <class name="login.SuccessfulLoginTest"/>
            <class name="login.UnsuccessfulLoginTest"/>
            <!-- Logout -->
            <class name="Products.LogoutHomePageTest"/>
            <!-- Sort products -->
            <class name="Products.SortProductsTest"/>
            <!-- Add multiple items -->
            <class name="Products.AddMultipleItemsTest"/>
            <!-- Add the specific product -->
            <class name="Products.AddSpecificProductTest"/>
            <!-- Complete a purchase -->
            <class name="Products.CompletePurchaseTest"/>
        </classes>
    </test>

    <test name="Test on Firefox">
        <parameter name="BrowserType" value="Firefox"></parameter>
        <classes>
            <!-- Login -->
            <class name="login.SuccessfulLoginTest"/>
            <class name="login.UnsuccessfulLoginTest"/>
            <!-- Logout -->
            <class name="Products.LogoutHomePageTest"/>
            <!-- Sort products -->
            <class name="Products.SortProductsTest"/>
            <!-- Add multiple items -->
            <class name="Products.AddMultipleItemsTest"/>
            <!-- Add the specific product -->
            <class name="Products.AddSpecificProductTest"/>
            <!-- Complete a purchase -->
            <class name="Products.CompletePurchaseTest"/>
        </classes>
    </test>
</suite>